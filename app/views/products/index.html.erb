<h1> Create Product </h1>
<%= link_to 'Create Product', new_product_path, class: 'btn btn-primary' %>
<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product['name'] %></td>
        <td><%= product['price'] %></td>
        <td>
          <%= link_to 'View', "/products/#{product['id']}", class: 'btn btn-primary' %>
          <%= link_to 'Delete', delete_product_path(product['id']), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
          <%= link_to 'Edit', edit_product_path(product['id']), class: 'btn btn-secondary' %>
          <%# <%= link_to 'Edit', edit_product_path(product['id']), class: 'btn btn-secondary' %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
