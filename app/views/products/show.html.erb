<h1>Product</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @product['name'] %></td>
      <td><%= @product['price'] %></td>
       <td> <%= link_to 'Delete', delete_product_path(@product['id']), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %> </td>
      <td> <%= link_to 'Edit', edit_product_path(@product['id']), class: 'btn btn-secondary' %> </td>
    </tr>
    <tr>
    <td>
    <%= link_to 'Back', products_path, class: 'btn btn-primary' %>
    </td>
    </tr>
  </tbody>
</table>
